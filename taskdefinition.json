{
  "family": "python-flask-app",
  "cpu": "1024",
  "memory": "3072",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "arn:aws:iam::482387069884:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::482387069884:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "python-flask-app",
      "image": "ghcr.io/harish9395/python-flask-app:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "appconfig-shared",
          "containerPath": "/config"
        }
      ],
      "environment": [
        {
          "name": "ENV",
          "value": "dev"
        }
      ]
    },
    {
      "name": "appconfig-agent",
      "image": "public.ecr.aws/aws-appconfig/aws-appconfig-agent:latest",
      "essential": false,
      "memory": 128,
      "cpu": 128,
      "environment": [
        { "name": "APPCONFIG_APPLICATION", "value": "Test-app" },
        { "name": "APPCONFIG_ENVIRONMENT", "value": "Dev" },
        { "name": "APPCONFIG_CONFIGURATION", "value": "ecs-task-resources" },
        { "name": "APPCONFIG_POLL_INTERVAL_SECONDS", "value": "5" },
        { "name": "AWS_REGION", "value": "us-east-2" }
      ],
      "mountPoints": [
        {
          "sourceVolume": "appconfig-shared",
          "containerPath": "/config"
        }
      ],
      "portMappings": [
        {
          "containerPort": 2772,
          "protocol": "tcp"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "appconfig-shared"
    }
  ]
}
