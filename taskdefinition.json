{
  "family": "python-flask-app",
  "cpu": "1024",
  "memory": "3072",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "arn:aws:iam::482387069884:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "python-flask-app",
      "image": "ghcr.io/harish9395/python-flask-app:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5000,
          "hostPort": 5000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "CONFIG_URL",
          "value": "http://localhost:2772/applications/my-app/environments/dev/configurations/runtime-config/latest",
          "name": "env",
          "value": "dev"
        }
      ]
    },
    {
      "name": "appconfig-agent",
      "image": "public.ecr.aws/aws-appconfig/aws-appconfig-agent:latest",
      "essential": false,
      "memory": 128,
      "cpu": 128,
      "environment": [
        { "name": "APPCONFIG_APPLICATION", "value": "my-app" },
        { "name": "APPCONFIG_ENVIRONMENT", "value": "dev" },
        { "name": "APPCONFIG_CONFIGURATION", "value": "runtime-config" },
        { "name": "APPCONFIG_POLL_INTERVAL_SECONDS", "value": "5" },
        { "name": "AWS_REGION", "value": "us-east-2" }
      ],
      "portMappings": [
        {
          "containerPort": 2772,
          "hostPort": 2772
        }
      ]
    }
  ]
}
